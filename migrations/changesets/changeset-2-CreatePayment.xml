<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
	http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="2" author="dbobro">
	  <preConditions onFail="MARK_RAN">
       <not>
        <tableExists schemaName="public" tableName="payment" />
       </not>
      </preConditions>
		<createTable tableName="payment">
			<column name="id" type="serial" >
			  <constraints primaryKey="true" nullable="false"/>
			</column>
			<column name="contract_id" type="integer">
			  <constraints nullable="false"/>
			</column>
			<column name="amount" type="double precision">
			  <constraints nullable="false"/>
			</column>
		    <column name="date" type="DATETIME">
			  <constraints nullable="false"/>
			</column>
			<column name="period" type="integer">
			  <constraints nullable="false"/>
			</column>
			<column name="contributor" type="varchar(50)"/>
		</createTable>

		<addForeignKeyConstraint baseColumnNames="contract_id"
				baseTableName="payment"
				constraintName="contract_id"
				deferrable="true"
				initiallyDeferred="true"
				onDelete="SET NULL"
				onUpdate="RESTRICT"
				referencedColumnNames="id"
				referencedTableName="contract"/>
	<rollback>
		<dropTable tableName="payment"/>
	</rollback>
	
</changeSet>	
  
</databaseChangeLog>



